{
    "name": "jubeki/filament-blocknote",
    "description": "A Laravel Filament package to add the BlockNote field to your forms.",
    "keywords": [
        "Jubeki",
        "laravel",
        "filament-blocknote"
    ],
    "homepage": "https://github.com/jubeki/filament-blocknote",
    "support": {
        "issues": "https://github.com/jubeki/filament-blocknote/issues",
        "source": "https://github.com/jubeki/filament-blocknote"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Julius Kiekbusch",
            "email": "contact@julius-kiekbusch.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/forms": "^3.0",
        "spatie/laravel-package-tools": "^1.16.1",
        "illuminate/contracts": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13.3",
        "nunomaduro/collision": "^7.10",
        "nunomaduro/larastan": "^2.6.4",
        "orchestra/testbench": "^8.13",
        "pestphp/pest": "^2.24",
        "pestphp/pest-plugin-arch": "^2.4.1",
        "pestphp/pest-plugin-laravel": "^2.2",
        "phpstan/extension-installer": "^1.3.1",
        "phpstan/phpstan-deprecation-rules": "^1.1.4",
        "phpstan/phpstan-phpunit": "^1.3.15"
    },
    "autoload": {
        "psr-4": {
            "Jubeki\\FilamentBlocknote\\": "src/",
            "Jubeki\\FilamentBlocknote\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jubeki\\FilamentBlocknote\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jubeki\\FilamentBlocknote\\FilamentBlocknoteServiceProvider"
            ],
            "aliases": {
                "FilamentBlocknote": "Jubeki\\FilamentBlocknote\\Facades\\FilamentBlocknote"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
